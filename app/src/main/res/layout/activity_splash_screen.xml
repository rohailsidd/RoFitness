<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#376287">

    <ImageView
        android:id="@+id/imageView_splashScreen_appLogo"
        android:layout_width="180.0dip"
        android:layout_height="180.0dip"
        android:contentDescription="@string/content_description"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/all_app_logo" />

    <TextView
        android:id="@+id/textView_splashScreen_mensFitness"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8.0dip"
        android:layout_marginTop="32.0dip"
        android:layout_marginEnd="8.0dip"
        android:fontFamily="@font/roboto_medium"
        android:text="@string/app_name"
        android:textColor="#B6C3CA"
        android:textSize="30.0sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView_splashScreen_appLogo" />
</androidx.constraintlayout.widget.ConstraintLayout>